<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radious_cardview"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp"
        >

        <ImageView
            android:id="@+id/ivMascota"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/perro1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvRate"
            android:layout_width="40dp"
            android:layout_height="30dp"

            android:gravity="right"
            android:textSize="@dimen/txthueso"
            android:text="rating"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivHuesoAmarillo"
            android:layout_width="@dimen/foto"
            android:layout_height="@dimen/foto"
            android:src="@drawable/dog_bone_48"
            />

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>