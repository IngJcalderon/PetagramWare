<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radious_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp">

        <ImageView
            android:id="@+id/ivMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/ivHuesoBlanco"
                android:layout_width="@dimen/foto"
                android:layout_height="@dimen/foto"
                android:src="@drawable/dog_bone_48_n"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txthueso"
                android:text="nombre"
                android:layout_centerVertical="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="@dimen/txthueso"
                android:text="0 likes"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/ivHuesoAmarillo"
                android:layout_width="@dimen/foto"
                android:layout_height="@dimen/foto"
                android:src="@drawable/dog_bone_48"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>